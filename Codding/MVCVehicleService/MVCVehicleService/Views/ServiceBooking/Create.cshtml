@model VehicleService.Model.ServiceBookingModel

<br />

<h2>@ViewBag.PageTitle</h2>
<hr />

<label style="color:green">@ViewBag.InsertMessage</label>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ServiceBookingID)

    <div class="form-group">
        @Html.Label("Select Vehicle", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.VehicleID, (SelectList)ViewBag.VehicleList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VehicleID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select BookingSlot", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.BookingSlotID, (SelectList)ViewBag.BookingSlotList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BookingSlotID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Enter Customer Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Enter Customer No", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CustomerNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Enter Registration No", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RegistrationNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RegistrationNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value='@ViewBag.Button' class="btn btn-primary" />
            @Html.ActionLink("Cancle", "ServiceBookingList", "", new { @Class = "btn btn-danger" })
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ServiceBookingList")
</div>

